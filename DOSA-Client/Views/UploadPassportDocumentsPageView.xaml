<UserControl x:Class="DOSA_Client.Views.UploadPassportDocumentsPageView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:controls="clr-namespace:DOSA_Client.Controls">

    <Grid Background="#ECEFF1">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Title -->
            <RowDefinition Height="*" />
            <!-- Content -->
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title and Horizontal Line -->
        <controls:HeaderRibbon DataContext="{Binding}" />

        <!-- Layer 2: Centered content in a card -->
        <Grid Grid.Row="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="30,10,30,20">
            <Border Background="White"
                    CornerRadius="10"
                    Padding="40"
                    VerticalAlignment="Stretch">
                <!-- Upload Section -->
                <StackPanel Grid.Row="1"
                        VerticalAlignment="Top"
                        HorizontalAlignment="Stretch"
                        Margin="30,20,30,20">

                    <!-- Required Documents List -->
                    <StackPanel Margin="0,0,0,20">
                        <TextBlock Text="Documents Required for Intergalactic Passport Clearance"
                                   FontSize="20"
                                   FontWeight="Bold"
                                   Margin="0,0,0,10"/>
                        
                        <TextBlock FontSize="14" Margin="0,0,0,5" Text="- Galactic Citizenship Holo-ID (e.g., Coruscant Central ID, Tatooine Homestead Record)"/>
                        <TextBlock FontSize="14" Margin="0,0,0,5" Text="- Affiliation Clearance (must confirm no ties to Sith, Rebellion, or First Order)"/>


                        <!-- Important Note -->
                        <TextBlock FontSize="14"
                                   FontStyle="Italic"
                                   Foreground="Red"
                                   Margin="0,10,0,0"
                                   Text="Note: Missing or incorrect documents will result in the denial of your application."/>
                    </StackPanel>

                    <!-- Button container to align Upload and Submit buttons next to each other -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10">
                        <!-- Upload Button -->
                        <Button Content="Upload Document"
                            Command="{Binding uploadDocumentCommand}"
                            Width="180"
                            Height="40"
                            Background="#7F5AF0"
                            Foreground="White"
                            FontWeight="Bold"
                            FontSize="16"
                            Margin="0,0,20,0"
                            Style="{StaticResource RoundedButtonStyle}"/>

                        <!-- Submit Button -->
                        <Button Content="Submit Documents"
                            Command="{Binding submitDocumentsCommand}"
                            HorizontalAlignment="Center"
                            Width="180"
                            Height="40"
                            Background="#7F5AF0"
                            Foreground="White"
                            FontWeight="Bold"
                            FontSize="16"
                            Margin="0,0,0,0"
                            Style="{StaticResource RoundedButtonStyle}"/>
                    </StackPanel>

                    <!-- Uploaded Documents List -->
                    <Border BorderBrush="Gray" 
                            BorderThickness="2" 
                            Margin="0,20,0,10" 
                            HorizontalAlignment="Stretch" 
                            MinHeight="150"
                            CornerRadius="5"
                            Background="White">
                        <ScrollViewer VerticalScrollBarVisibility="Auto" 
                                        HorizontalScrollBarVisibility="Disabled">
                            <ItemsControl ItemsSource="{Binding UploadedDocuments}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border BorderThickness="1" BorderBrush="Gray" Padding="10" Margin="5">
                                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                                <Button Command="{Binding DataContext.RemoveDocumentCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                                        CommandParameter="{Binding}"
                                                        Width="30" Height="30"
                                                        Margin="0,0,10,0"
                                                        Background="Transparent"
                                                        BorderBrush="{x:Null}">
                                                    <Image Source="/Assets/bin_icon.png" Width="20" Height="20"/>
                                                </Button>
                                                <TextBlock Text="{Binding FileName}" FontSize="14" VerticalAlignment="Center"/>
                                            </StackPanel>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>

                                <!-- Show something if it's empty -->
                                <ItemsControl.Style>
                                    <Style TargetType="ItemsControl">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding UploadedDocuments.Count}" Value="0">
                                                <Setter Property="Template">
                                                    <Setter.Value>
                                                        <ControlTemplate TargetType="ItemsControl">
                                                            <TextBlock Text="No documents uploaded yet."
                                                                       FontStyle="Italic"
                                                                       Foreground="Gray"
                                                                       HorizontalAlignment="Center"
                                                                       VerticalAlignment="Center"
                                                                       Margin="20"/>
                                                        </ControlTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </ItemsControl.Style>
                            </ItemsControl>
                        </ScrollViewer>
                    </Border>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</UserControl>
