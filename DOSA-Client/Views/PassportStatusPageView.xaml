<UserControl x:Class="DOSA_Client.Views.PassportStatusPageView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             Background="White"
             HorizontalAlignment="Stretch"
             VerticalAlignment="Stretch">

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Title -->
            <RowDefinition Height="Auto"/>
            <!-- Headers -->
            <RowDefinition Height="*"/>
            <!-- List -->
        </Grid.RowDefinitions>

        <!-- Title and Horizontal Line -->
        <StackPanel Orientation="Vertical" Margin="30,20,30,20">
            <TextBlock Text="{Binding Title}"
                       FontSize="26"
                       FontWeight="Bold"
                       HorizontalAlignment="Left" />
            <!-- Border for Horizontal Line -->
            <Border Height="1" Background="Gray" />
        </StackPanel>

        <!-- Headers -->
        <Grid Grid.Row="1" Margin="30,0,30,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="3*" />
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0" Text="Application Date" FontWeight="Bold" />
            <TextBlock Grid.Column="1" Text="Status" FontWeight="Bold" />
            <TextBlock Grid.Column="2" Text="Reason" FontWeight="Bold" />
        </Grid>

        <!-- Application List -->
        <ScrollViewer Grid.Row="2" Margin="30,0,30,30">
            <ItemsControl ItemsSource="{Binding PassportApplications}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Grid Margin="0 5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2*" />
                                <ColumnDefinition Width="2*" />
                                <ColumnDefinition Width="3*" />
                            </Grid.ColumnDefinitions>

                            <!-- Date -->
                            <TextBlock Grid.Column="0"
                                       Text="{Binding SubmittedAt, StringFormat={}{0:MM/dd/yyyy}}" />

                            <!-- Status -->
                            <TextBlock Grid.Column="1"
                                       FontWeight="Bold"
                                       Text="{Binding Status.Name}">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Foreground" Value="Black"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Status.Name}" Value="REJECTED">
                                                <Setter Property="Foreground" Value="Red"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding Status.Name}" Value="PENDING">
                                                <Setter Property="Foreground" Value="DarkOrange"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding Status.Name}" Value="APPROVED">
                                                <Setter Property="Foreground" Value="Green"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>

                            <!-- Reason -->
                            <TextBlock Grid.Column="2"
                                       Text="{Binding Status.Reason, TargetNullValue='-'}"
                                       TextWrapping="Wrap" />
                        </Grid>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</UserControl>
