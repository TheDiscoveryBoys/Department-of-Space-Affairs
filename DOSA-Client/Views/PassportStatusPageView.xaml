<UserControl x:Class="DOSA_Client.Views.PassportStatusPageView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DOSA_Client.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top" Width="700">
            <TextBlock FontSize="24" FontWeight="Bold" Text="{Binding Title}" 
                       HorizontalAlignment="Center" Margin="0,0,0,20"/>

            <ListView ItemsSource="{Binding PassportApplications}" 
          HorizontalContentAlignment="Stretch">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Border BorderBrush="LightGray" BorderThickness="1" CornerRadius="8" 
                    Margin="5" Padding="10" HorizontalAlignment="Stretch">
                            <StackPanel>
                                <TextBlock FontSize="16" FontWeight="SemiBold" Text="{Binding Status.Name}" />

                                <TextBlock FontStyle="Italic" Foreground="Green" 
                               Text="{Binding Status.Reason, TargetNullValue='No reason provided'}" />

                                <TextBlock Text="{Binding SubmittedAt, StringFormat='Submitted At: {0:MMMM dd, yyyy}'}" />
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

        </StackPanel>
    </Grid>
</UserControl>
