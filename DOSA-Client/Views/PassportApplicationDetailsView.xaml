<UserControl x:Class="DOSA_Client.Views.PassportApplicationDetailsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:controls="clr-namespace:DOSA_Client.Controls"
             mc:Ignorable="d"
             HorizontalAlignment="Stretch"
             VerticalAlignment="Stretch">

    <Grid Background="#ECEFF1">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Header -->
            <RowDefinition Height="*"/>
            <!-- Guidelines -->
            <RowDefinition Height="Auto"/>
            <!-- Button -->
        </Grid.RowDefinitions>

        <!-- Header -->
        <controls:HeaderRibbon DataContext="{Binding}"/>

        <!-- Content -->
        <Grid Grid.Row="1"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                Margin="30,10,30,20">
            <Border Background="White"
                    CornerRadius="10"
                    Padding="40"
                    VerticalAlignment="Stretch">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <TextBlock Text="Intergalactic Passport Application Guidelines"
                                   FontSize="22"
                                   FontWeight="Bold"
                                   Margin="0,0,0,20"/>

                        <StackPanel Margin="10,0,0,0">
                            <TextBlock FontSize="14"
                                    Margin="0,0,0,10">
                                    <Run Text="# "/>
                                    <Run Text="Galactic ID: "
                                         FontWeight="Bold"/>
                                    <Run Text="Ensure the applicant has submitted a valid Galactic ID (e.g., Earth Driver's License, Moonbase Resident Card)."/>
                            </TextBlock>

                            <TextBlock FontSize="14"
                                    Margin="0,0,0,10">
                                    <Run Text="# "/>
                                    <Run Text="Proof of Residence: "
                                         FontWeight="Bold"/>
                                    <Run Text="Verify that the applicant has provided valid planetary residency proof (e.g., utility bill, asteroid lease)."/>
                            </TextBlock>

                            <TextBlock FontSize="14"
                                    Margin="0,0,0,10">
                                    <Run Text="# "/>
                                    <Run Text="Starbirth Certificate: "
                                         FontWeight="Bold"/>
                                    <Run Text="Ensure the applicant’s Starbirth Certificate matches galactic records and constellation data."/>
                            </TextBlock>

                            <TextBlock FontSize="14"
                                    Margin="0,0,0,10">
                                    <Run Text="# "/>
                                    <Run Text="Criminal Record: "
                                         FontWeight="Bold"/>
                                    <Run Text="Check for clearance from the Intergalactic Defense Force to ensure no major offenses."/>
                            </TextBlock>
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Grid>

        <!-- Button -->
        <Grid Grid.Row="2"
                Margin="30,0,30,20">
            <Button Content="Get Next Passport Application"
                    Command="{Binding GetNextPassportApplication}"
                    CommandParameter="Process Passport Application Page"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Bottom"
                    Width="250"
                    Height="40"
                    Background="#7F5AF0"
                    Foreground="White"
                    FontWeight="Bold"
                    FontSize="16"
                    Style="{StaticResource RoundedButtonStyle}"/>
        </Grid>
    </Grid>
</UserControl>
