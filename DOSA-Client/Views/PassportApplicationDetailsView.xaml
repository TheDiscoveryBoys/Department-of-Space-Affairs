<UserControl x:Class="DOSA_Client.Views.PassportApplicationDetailsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:controls="clr-namespace:DOSA_Client.Controls"
             mc:Ignorable="d"
             HorizontalAlignment="Stretch"
             VerticalAlignment="Stretch">

    <Grid Background="#ECEFF1">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Header -->
            <RowDefinition Height="*"/>
            <!-- Guidelines -->
            <RowDefinition Height="Auto"/>
            <!-- Button -->
        </Grid.RowDefinitions>

        <!-- Header -->
        <controls:HeaderRibbon DataContext="{Binding}" />

        <!-- Content -->
        <Grid Grid.Row="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="30,10,30,20">
            <Border Background="White"
                    CornerRadius="10"
                    Padding="40"
                    VerticalAlignment="Stretch">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <TextBlock Text="Passport Application Processing Guidelines"
                                   FontSize="22"
                                   FontWeight="Bold"
                                   Margin="0,0,0,20"/>

                        <TextBlock Text="Identity Verification: Ensure the applicant has submitted government-issued ID."
                                   FontSize="14"
                                   Margin="0,5"/>
                        <TextBlock Text="Residency Proof: Must include a valid address and supporting documentation."
                                   FontSize="14"
                                   Margin="0,5"/>
                        <TextBlock Text="Criminal Record: Background check must indicate no major offenses."
                                   FontSize="14"
                                   Margin="0,5"/>
                        <TextBlock Text="Photo Specifications: Passport photo must follow standard biometric guidelines."
                                   FontSize="14"
                                   Margin="0,5"/>
                        <TextBlock Text="Application Completeness: Ensure no mandatory fields are missing or inconsistent."
                                   FontSize="14"
                                   Margin="0,5"/>
                        <TextBlock Text="Supporting Documents: Check for required files (e.g., birth certificate, previous passport)."
                                   FontSize="14"
                                   Margin="0,5"/>
                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Grid>

        <!-- Button -->
        <Grid Grid.Row="2" Margin="30,0,30,20">
            <Button Content="Get Next Passport Application"
                    Command="{Binding GetNextPassportApplication}"
                    CommandParameter="Process Passport Application Page"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Bottom"
                    Width="250"
                    Height="40"
                    Background="#7F5AF0"
                    Foreground="White"
                    FontWeight="Bold"
                    FontSize="16"
                    Style="{StaticResource RoundedButtonStyle}"/>
        </Grid>
    </Grid>
</UserControl>
