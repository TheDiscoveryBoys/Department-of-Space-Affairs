<UserControl x:Class="DOSA_Client.Views.LoginView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d">
    <Grid Background="#1E1E2F">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="800" >
            <TextBlock Text="Welcome to the Department of Galactic Affairs"
                       FontSize="28"
                       FontWeight="Bold"
                       Foreground="White"
                       TextAlignment="Center"
                       Margin="0,0,0,10"/>
            
            <TextBlock Text="{Binding LoginViewDescription}" 
                       FontSize="16" 
                       Foreground="#CCCCCC"
                       TextAlignment="Center"
                       TextWrapping="Wrap"/>

            <Button Content="Login"
                    Width="120"
                    Height="40"
                    FontSize="16"
                    Command="{Binding LoginCommand}"
                    HorizontalAlignment="Center"
                    Margin="0,20,0,0"
                    Background="#4CAF50"
                    Foreground="White"
                    Padding="10,5"/>
        </StackPanel>
    </Grid>
</UserControl>
