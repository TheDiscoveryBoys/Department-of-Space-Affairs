<UserControl x:Class="DOSA_Client.Views.ManagerScreenView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:DOSA_Client.ViewModels"
             xmlns:views="clr-namespace:DOSA_Client.Views">
    <UserControl.Resources>
        <DataTemplate DataType="{x:Type vm:ManagerPageViewModel}">
            <views:ManagerPageView />
        </DataTemplate>
    </UserControl.Resources>
    <Grid>
        <ContentControl Content="{Binding PageManager.CurrentPage}"
                        HorizontalAlignment="Stretch" VerticalAlignment="Stretch" />
    </Grid>
</UserControl>
