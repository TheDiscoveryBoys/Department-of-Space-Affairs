<UserControl x:Class="DOSA_Client.Views.UserDetailsPageView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             Background="White"
             HorizontalAlignment="Stretch"
             VerticalAlignment="Stretch">
    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Title -->
            <RowDefinition Height="*"/>
            <!-- Content -->
        </Grid.RowDefinitions>

        <!-- Title and Horizontal Line -->
        <StackPanel Orientation="Vertical" Margin="30,20,30,20">
            <TextBlock Text="{Binding Title}"
                       FontSize="26"
                       FontWeight="Bold"
                       HorizontalAlignment="Left" />
            <Border Height="1" Background="Gray" />
        </StackPanel>

        <!-- Form Content -->
        <ScrollViewer Grid.Row="1" Margin="30,0,30,30">
            <StackPanel HorizontalAlignment="Stretch" Width="600">
                <!-- Form Fields -->
                <Grid Margin="0,10,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="180"/>
                        <!-- Labels -->
                        <ColumnDefinition Width="*"/>
                        <!-- Input Fields -->
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Email -->
                    <TextBlock Grid.Row="0" Grid.Column="0" 
                               Text="Email:" 
                               FontWeight="Bold" 
                               VerticalAlignment="Center" 
                               Margin="0,15,10,15"/>
                    <TextBox Grid.Row="0" Grid.Column="1" 
                             Height="30" 
                             FontSize="14" 
                             VerticalContentAlignment="Center"
                             Padding="5,0"
                             Text="user@example.com"
                             Margin="0,10"/>

                    <!-- Name -->
                    <TextBlock Grid.Row="1" Grid.Column="0" 
                               Text="Name:" 
                               FontWeight="Bold" 
                               VerticalAlignment="Center" 
                               Margin="0,15,10,15"/>
                    <TextBox Grid.Row="1" Grid.Column="1" 
                             Height="30" 
                             FontSize="14"
                             VerticalContentAlignment="Center"
                             Padding="5,0"
                             Text="Cade Sayner"
                             Margin="0,10"/>

                    <!-- Species -->
                    <TextBlock Grid.Row="2" Grid.Column="0" 
                               Text="Species:" 
                               FontWeight="Bold" 
                               VerticalAlignment="Center" 
                               Margin="0,15,10,15"/>
                    <TextBox Grid.Row="2" Grid.Column="1" 
                             Height="30" 
                             FontSize="14"
                             VerticalContentAlignment="Center"
                             Padding="5,0"
                             Text="Homo Sapien"
                             Margin="0,10"/>

                    <!-- Planet of Origin -->
                    <TextBlock Grid.Row="3" Grid.Column="0" 
                               Text="Planet of Origin:" 
                               FontWeight="Bold" 
                               VerticalAlignment="Center" 
                               Margin="0,15,10,15"/>
                    <TextBox Grid.Row="3" Grid.Column="1" 
                             Height="30" 
                             FontSize="14"
                             VerticalContentAlignment="Center"
                             Padding="5,0"
                             Text="Earth"
                             Margin="0,10"/>

                    <!-- Primary Language -->
                    <TextBlock Grid.Row="4" Grid.Column="0" 
                               Text="Primary Language:" 
                               FontWeight="Bold" 
                               VerticalAlignment="Center" 
                               Margin="0,15,10,15"/>
                    <TextBox Grid.Row="4" Grid.Column="1" 
                             Height="30" 
                             FontSize="14"
                             VerticalContentAlignment="Center"
                             Padding="5,0"
                             Text="English"
                             Margin="0,10"/>

                    <!-- Date of Birth -->
                    <TextBlock Grid.Row="5" Grid.Column="0" 
                               Text="Date of Birth:" 
                               FontWeight="Bold" 
                               VerticalAlignment="Center" 
                               Margin="0,15,10,15"/>
                    <DatePicker Grid.Row="5" Grid.Column="1" 
                                Height="30" 
                                FontSize="14"
                                VerticalContentAlignment="Center"
                                Margin="0,10"/>
                </Grid>

                <!-- Done Button -->
                <Button Content="Done"
                        Command="{Binding onNextButtonClickedCommand}"
                        CommandParameter="Upload Passport Documents Page"
                        HorizontalAlignment="Right"
                        Width="180"
                        Height="40"
                        Background="#007ACC"
                        Foreground="White"
                        FontWeight="Bold"
                        FontSize="16"
                        Margin="0,20,0,0"/>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>