<UserControl x:Class="DOSA_Client.Views.UserDetailsPageView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Title -->
            <RowDefinition Height="Auto"/>
            <!-- Headers -->
            <RowDefinition Height="*"/>
            <!-- List -->
        </Grid.RowDefinitions>

        <!-- Title and Horizontal Line -->
        <StackPanel Orientation="Vertical" Margin="30,20,30,20">
            <TextBlock Text="{Binding Title}"
                       FontSize="26"
                       FontWeight="Bold"
                       HorizontalAlignment="Left" />
            <!-- Border for Horizontal Line -->
            <Border Height="1" Background="Gray" />
        </StackPanel>

        <Grid Grid.Row="1" Margin="30,0,30,10">
            <StackPanel VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    Width="600">


                <!-- Form -->
                <Grid Margin="0,0,0,30">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="600"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Width="400" Grid.Row="0" Grid.Column="0" HorizontalAlignment="Center">
                        <TextBlock Text="Email:"
                               FontWeight="Bold"
                               VerticalAlignment="Center"
                               Margin="0,10"/>
                        <TextBox Margin="0,10"
                             Height="30"
                             FontSize="14"
                             Text="user@example.com"/>
                    </StackPanel>

                    <StackPanel Width="400" Grid.Row="1" Grid.Column="0" HorizontalAlignment="Center">
                        <TextBlock Text="Name:"
                               FontWeight="Bold"
                               VerticalAlignment="Center"
                               Margin="0,10"/>
                        <TextBox Margin="0,10"
                             Height="30"
                             FontSize="14"
                             Text="Cade Sayner"/>
                    </StackPanel>

                    <StackPanel Width="400" Grid.Row="2" Grid.Column="0" HorizontalAlignment="Center">
                        <TextBlock Text="Species:"
                               FontWeight="Bold"
                               VerticalAlignment="Center"
                               Margin="0,10"/>
                        <TextBox Margin="0,10"
                             Height="30"
                             FontSize="14"
                             Text="Homo Sapien"/>
                    </StackPanel>

                    <StackPanel Width="400" Grid.Row="3" Grid.Column="0" HorizontalAlignment="Center">
                        <TextBlock Text="Planet of Origin:"
                               FontWeight="Bold"
                               VerticalAlignment="Center"
                               Margin="0,10"/>
                        <TextBox Margin="0,10"
                             Height="30"
                             FontSize="14"
                             Text="Earth"/>
                    </StackPanel>

                    <StackPanel Width="400" Grid.Row="4" Grid.Column="0" HorizontalAlignment="Center">
                        <TextBlock Text="Primary Language:"
                               FontWeight="Bold"
                               VerticalAlignment="Center"
                               Margin="0,10"/>
                        <TextBox Margin="0,10"
                             Height="30"
                             FontSize="14"
                             Text="English"/>
                    </StackPanel>

                    <StackPanel Width="400" Grid.Row="5" Grid.Column="0" HorizontalAlignment="Center">
                        <TextBlock Text="Date of Birth:"
                               FontWeight="Bold"
                               VerticalAlignment="Center"
                               Margin="0,10"/>
                        <DatePicker Margin="0,10"
                                Height="30"
                                FontSize="14"/>
                    </StackPanel>
                </Grid>

                <!-- Centered Done Button -->
                <Button Content="Done"
                    Command="{Binding onNextButtonClickedCommand}"
                    CommandParameter="Upload Passport Documents Page"
                    HorizontalAlignment="Center"
                    Width="180"
                    Height="40"
                    Background="#007ACC"
                    Foreground="White"
                    FontWeight="Bold"
                    FontSize="16"
                    Margin="0,10,0,20"/>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
