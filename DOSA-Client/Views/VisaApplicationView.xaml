<UserControl x:Class="DOSA_Client.Views.VisaApplicationView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:controls="clr-namespace:DOSA_Client.Controls"
             mc:Ignorable="d"
             HorizontalAlignment="Stretch"
             VerticalAlignment="Stretch">

    <Grid Background="#ECEFF1">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <controls:HeaderRibbon DataContext="{Binding}" />

        <!-- Content -->
        <Grid Grid.Row="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="30,10,30,20">
            <Border BorderThickness="3"
                    Background="White"
                    CornerRadius="10"
                    Padding="40"
                    VerticalAlignment="Stretch">
                <Border.BorderBrush>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#462AD8" Offset="0" />
                        <GradientStop Color="#DA34AE" Offset="0.75" />
                        <GradientStop Color="#8A16C1" Offset="1" />
                    </LinearGradientBrush>
                </Border.BorderBrush>
                
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
                        <Grid Margin="100,10,100,20">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1.5*"/>
                                <ColumnDefinition Width="3*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- Destination Planet -->
                            <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,15,10,15">
                                <Image Source="/Assets/asteroid.png" Width="20" Height="20" Margin="0,0,5,0"/>
                                <TextBlock Grid.Row="0" Grid.Column="0" 
                                           Text="Destination Planet:" 
                                           FontWeight="Bold" 
                                           VerticalAlignment="Center"
                                           FontFamily="Consolas"
                                           Margin="0,15,10,15"/>
                            </StackPanel>
                            <ComboBox Grid.Row="0" Grid.Column="1" 
                                      ItemsSource="{Binding PlanetsList}"
                                      DisplayMemberPath="Name"
                                      SelectedValuePath="Name"
                                      SelectedValue="{Binding DestinationPlanet, Mode=TwoWay}"
                                      Height="30" 
                                      FontSize="14"
                                      FontFamily="Consolas"
                                      VerticalContentAlignment="Center"
                                      Padding="5,0"
                                      Margin="0,10"/>

                            <!-- Travel Reason -->
                            <StackPanel Grid.Row="1" Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,15,10,15">
                                <Image Source="/Assets/idea.png" Width="20" Height="20" Margin="0,0,5,0"/>
                                <TextBlock Grid.Row="1" Grid.Column="0" 
                                           Text="Reason for Travel:" 
                                           FontFamily="Consolas"
                                           FontWeight="Bold" 
                                           VerticalAlignment="Center"
                                           Margin="0,15,10,15"/>
                            </StackPanel>
                            <TextBox Grid.Row="1" Grid.Column="1" 
                                     Height="60" 
                                     FontSize="14"
                                     AcceptsReturn="True"
                                     FontFamily="Consolas"
                                     TextWrapping="Wrap"
                                     VerticalContentAlignment="Top"
                                     Padding="5"
                                     Text="{Binding TravelReason, UpdateSourceTrigger=PropertyChanged}" 
                                     Margin="0,10"/>

                            <!-- Start Date -->
                            <StackPanel Grid.Row="2" Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,15,10,15">
                                <Image Source="/Assets/calendar.png" Width="20" Height="20" Margin="0,0,5,0"/>
                                <TextBlock Grid.Row="2" Grid.Column="0" 
                                           Text="Start Date:" 
                                           FontFamily="Consolas"
                                           FontWeight="Bold" 
                                           VerticalAlignment="Center"
                                           Margin="0,15,10,15"/>
                            </StackPanel>
                            <DatePicker Grid.Row="2" Grid.Column="1" 
                                        Height="30" 
                                        FontSize="14"
                                        SelectedDate="{Binding StartDate}" 
                                        Margin="0,10"/>

                            <!-- End Date -->
                            <StackPanel Grid.Row="3" Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,15,10,15">
                                <Image Source="/Assets/calendar.png" Width="20" Height="20" Margin="0,0,5,0"/>
                                <TextBlock Grid.Row="3" Grid.Column="0" 
                                           Text="End Date:" 
                                           FontWeight="Bold" 
                                           FontFamily="Consolas"
                                           VerticalAlignment="Center"
                                           Margin="0,15,10,15"/>
                            </StackPanel>
                            <DatePicker Grid.Row="3" Grid.Column="1" 
                                        Height="30" 
                                        FontSize="14"
                                        SelectedDate="{Binding EndDate}" 
                                        Margin="0,10"/>

                        </Grid>

                        <!-- Submit Button -->
                        <Button Command="{Binding OnSubmitVisaCommand}"
                                IsEnabled="{Binding IsSubmitEnabled}"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Bottom"
                                Width="200"
                                Height="40"
                                Background="#7F5AF0"
                                Foreground="White"
                                FontWeight="Bold"
                                FontSize="16"
                                Margin="100,10,100,20"
                                Cursor="Hand"
                                Style="{StaticResource RoundedButtonStyle}">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <TextBlock Text="Submit Application"
                                           VerticalAlignment="Center"
                                           Foreground="White"
                                           FontWeight="Bold"/>  
                                <Image Source="/Assets/arrow.png"
                                       Width="20"
                                       Height="20"
                                       Margin="8,0,0,0"/>       
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Grid>
    </Grid>
</UserControl>
