<UserControl x:Class="DOSA_Client.Views.VisaApplicationView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:controls="clr-namespace:DOSA_Client.Controls"
             mc:Ignorable="d"
             HorizontalAlignment="Stretch"
             VerticalAlignment="Stretch">

    <Grid Background="#ECEFF1">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <controls:HeaderRibbon DataContext="{Binding}" />

        <!-- Main Form -->
        <Grid Grid.Row="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="30,10,30,20">
            <Border Background="White"
                    CornerRadius="10"
                    Padding="40"
                    VerticalAlignment="Stretch">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
                        <Grid Margin="100,10,100,20">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1.5*"/>
                                <ColumnDefinition Width="3*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- Destination Planet -->
                            <TextBlock Grid.Row="0" Grid.Column="0" 
                                       Text="Destination Planet:" 
                                       FontWeight="Bold" 
                                       VerticalAlignment="Center"
                                       Margin="0,15,10,15"/>
                            <TextBox Grid.Row="0" Grid.Column="1" 
                                     Height="30" 
                                     FontSize="14"
                                     VerticalContentAlignment="Center"
                                     Padding="5,0"
                                     Text="{Binding DestinationPlanet}" 
                                     Margin="0,10"/>

                            <!-- Travel Reason -->
                            <TextBlock Grid.Row="1" Grid.Column="0" 
                                       Text="Reason for Travel:" 
                                       FontWeight="Bold" 
                                       VerticalAlignment="Center"
                                       Margin="0,15,10,15"/>
                            <TextBox Grid.Row="1" Grid.Column="1" 
                                     Height="60" 
                                     FontSize="14"
                                     AcceptsReturn="True"
                                     TextWrapping="Wrap"
                                     VerticalContentAlignment="Top"
                                     Padding="5"
                                     Text="{Binding TravelReason}" 
                                     Margin="0,10"/>

                            <!-- Start Date -->
                            <TextBlock Grid.Row="2" Grid.Column="0" 
                                       Text="Start Date:" 
                                       FontWeight="Bold" 
                                       VerticalAlignment="Center"
                                       Margin="0,15,10,15"/>
                            <DatePicker Grid.Row="2" Grid.Column="1" 
                                        Height="30" 
                                        FontSize="14"
                                        SelectedDate="{Binding StartDate}" 
                                        Margin="0,10"/>

                            <!-- End Date -->
                            <TextBlock Grid.Row="3" Grid.Column="0" 
                                       Text="End Date:" 
                                       FontWeight="Bold" 
                                       VerticalAlignment="Center"
                                       Margin="0,15,10,15"/>
                            <DatePicker Grid.Row="3" Grid.Column="1" 
                                        Height="30" 
                                        FontSize="14"
                                        SelectedDate="{Binding EndDate}" 
                                        Margin="0,10"/>

                        </Grid>

                        <!-- Submit Button -->
                        <Button Content="Submit Application"
                                Command="{Binding onSubmitVisaCommand}"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Bottom"
                                Width="200"
                                Height="40"
                                Background="#7F5AF0"
                                Foreground="White"
                                FontWeight="Bold"
                                FontSize="16"
                                Margin="100,10,100,20"
                                Style="{StaticResource RoundedButtonStyle}"/>
                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Grid>
    </Grid>
</UserControl>
