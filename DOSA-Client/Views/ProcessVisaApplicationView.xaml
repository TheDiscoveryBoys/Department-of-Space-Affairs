<UserControl IsVisibleChanged="UserControl_IsVisibleChanged"
             x:Class="DOSA_Client.Views.ProcessVisaApplicationView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:controls="clr-namespace:DOSA_Client.Controls"
             mc:Ignorable="d"
             HorizontalAlignment="Stretch"
             VerticalAlignment="Stretch">

    <Grid Background="#ECEFF1">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <controls:HeaderRibbon DataContext="{Binding}"/>

        <!-- Content -->
        <Grid Grid.Row="1" Margin="30,10,30,20">
            <Border Background="White"
                    CornerRadius="10"
                    Padding="40">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <TextBlock Text="Applicant Details"
                                   FontSize="22"
                                   FontWeight="Bold"/>

                        <!-- Applicant Info -->
                        <Grid Margin="30,10,30,20">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Left Column -->
                            <StackPanel Grid.Column="0" Margin="0,10,20,10">
                                <StackPanel Orientation="Horizontal" Margin="0,5">
                                    <TextBlock Text="Name:" FontWeight="Bold" Margin="0,0,5,0"/>
                                    <TextBlock Text="{Binding VisaApplication.Applicant.name}"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0,5">
                                    <TextBlock Text="Email:" FontWeight="Bold" Margin="0,0,5,0"/>
                                    <TextBlock Text="{Binding VisaApplication.Applicant.email}"/>
                                </StackPanel>
                            </StackPanel>

                            <!-- Right Column -->
                            <StackPanel Grid.Column="1" Margin="20,10,0,10">
                                <StackPanel Orientation="Horizontal" Margin="0,5">
                                    <TextBlock Text="Species:" FontWeight="Bold" Margin="0,0,5,0"/>
                                    <TextBlock Text="{Binding VisaApplication.Applicant.species}"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0,5">
                                    <TextBlock Text="Planet of Origin:" FontWeight="Bold" Margin="0,0,5,0"/>
                                    <TextBlock Text="{Binding VisaApplication.Applicant.planet_of_origin}"/>
                                </StackPanel>
                            </StackPanel>
                        </Grid>

                        <TextBlock Text="Visa Application Details"
                                   FontSize="22"
                                   FontWeight="Bold"/>

                        <!-- Visa Application Info -->
                        <Grid Margin="30,10,30,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Left Column -->
                            <StackPanel Grid.Column="0" Margin="0,10,20,10">
                                <StackPanel Orientation="Horizontal" Margin="0,5">
                                    <TextBlock Text="Destination Planet:" FontWeight="Bold" Margin="0,0,5,0"/>
                                    <TextBlock Text="{Binding VisaApplication.VisaApplication.DestinationPlanet}"/>
                                </StackPanel>
                            </StackPanel>

                            <!-- Right Column -->
                            <StackPanel Grid.Column="1" Margin="20,10,0,10">
                                <!-- Travel Date -->
                                <StackPanel Orientation="Horizontal" Margin="0,5">
                                    <TextBlock Text="Travel Date:" FontWeight="Bold" Margin="0,0,5,0"/>
                                    <TextBlock Text="{Binding VisaApplication.VisaApplication.StartDate, StringFormat='{}{0:yyyy-MM-dd}'}"
                                               Margin="0,0,5,0"/>
                                    <TextBlock Text="to" VerticalAlignment="Center"/>
                                    <TextBlock Text="{Binding VisaApplication.VisaApplication.EndDate, StringFormat='{}{0:yyyy-MM-dd}'}"
                                               Margin="5,0,5,0"/>
                                </StackPanel>
                            </StackPanel>
                        </Grid>

                        <StackPanel Margin="30,0,30,20">
                            <!-- Travel Reason -->
                            <Grid Margin="0,0,0,10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Text="Travel Reason:" FontWeight="Bold" Margin="0,0,5,0" VerticalAlignment="Top"/>
                                <TextBlock Text="{Binding VisaApplication.VisaApplication.TravelReason}"
                                           Grid.Column="1"
                                           HorizontalAlignment="Stretch"
                                           TextWrapping="Wrap"
                                           VerticalAlignment="Center"/>
                            </Grid>
                        </StackPanel>

                        <!-- Notes Section -->
                        <StackPanel Margin="30,10,30,20">
                            <TextBlock Text="Enter any relevant notes or instructions here..."
                                       Foreground="Gray"
                                       FontSize="14"
                                       IsHitTestVisible="False"
                                       VerticalAlignment="Top"
                                       x:Name="PlaceholderTextBlock"/>
                            <TextBox Name="ReviewerNotesTextBox"
                                     Height="100"
                                     FontSize="14"
                                     Padding="10"
                                     TextWrapping="Wrap"
                                     Text="{Binding Reason, UpdateSourceTrigger=PropertyChanged}"
                                     AcceptsReturn="True"
                                     VerticalScrollBarVisibility="Auto"
                                     Background="#FAFAFA"
                                     BorderBrush="#B0BEC5"
                                     BorderThickness="1"/>
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Grid>

        <!-- Action Buttons -->
        <Grid Grid.Row="2" Margin="30,0,30,20">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Reject"
                        Command="{Binding RejectCommand}"
                        IsEnabled="{Binding IsRejectEnabled}"
                        Margin="0,0,30,0"
                        Width="150"
                        Height="40"
                        Background="Red"
                        Foreground="White"
                        FontWeight="Bold"
                        FontSize="16"
                        Style="{StaticResource RoundedButtonStyle}"/>
                <Button Content="Approve"
                        Command="{Binding ApproveCommand}"
                        Width="150"
                        Height="40"
                        Background="#7F5AF0"
                        Foreground="White"
                        FontWeight="Bold"
                        FontSize="16"
                        Style="{StaticResource RoundedButtonStyle}"/>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
