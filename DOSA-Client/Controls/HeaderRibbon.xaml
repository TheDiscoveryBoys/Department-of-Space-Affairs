<UserControl x:Class="DOSA_Client.Controls.HeaderRibbon"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="Auto" Width="Auto">
    <StackPanel Orientation="Vertical" Margin="30,20,30,20">
        <TextBlock Text="{Binding Title}"
                   FontSize="25"
                   FontWeight="Bold"
                   HorizontalAlignment="Left" 
                   FontFamily="Consolas"
                   />

        <Grid HorizontalAlignment="Stretch" VerticalAlignment="Center">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Rectangle Grid.Column="0" HorizontalAlignment="Stretch" Height="5" Fill="#602cd1" Margin="0,5,5,0"/>
            <Rectangle Grid.Column="1" HorizontalAlignment="Stretch" Height="5" Fill="#ad31bb" Margin="0,5,5,0"/>
            <Rectangle Grid.Column="2" HorizontalAlignment="Stretch" Height="5" Fill="#d434b0" Margin="0,5,5,0"/>
        </Grid>
    </StackPanel>
</UserControl>
